<h2>Book Event</h2>

<h3><%= @event.name %></h3>
</br>
<p><%= @event.user.first_name %><%= @event.user.last_name %></p>
<p><%= @event.description %></p>
</br>
<p><%= @event.price %></p>
</br>
<!-- <p>Spots left: <#% interpolate method that shows how many spots are left %></p> -->
<!-- <#%= link_to user.name(host), user_path(@user) %> display host as a link, maybe as a card? clicking on host name will route to host profile-->

<%= form_for([@event, @booking]) do |f| %>
  <%= f.submit %>
  <%= flash[:notice] = "Event succesfully booked" %>
<% end %>

<div class="btn-back-to-event">
  <div class="btn btn-warning">
    <%= link_to "Event Page", event_path(@event) %>
  </div>
</div>


